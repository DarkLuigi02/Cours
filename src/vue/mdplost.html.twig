{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Connexion {% endblock %}
{% block contenu %} 

{% if form.valide is defined %}     
    {% if form.valide == true %} 
        {% if utilisateur.valide == true %}      
        <h1>Connection réussie</h1>      
        <h1>Vous avez un nouveau mdp</h1>   
        {% else %}
        <h1>Vous avez reçu un Email</h1>
        {% endif %}  
    {% else %} 
    <h1>Echec de Connexion</h1>        
    <h1>Erreur : {{form.message}}</h1>       
    <h1><a href="index.php?page=accueil">Retourner sur la page de Accueil</a></h1>    
    {% endif %}     
{% else %}    
    <form action="index.php?page=mdplost" method="post" enctype="application/x-www-form-urlencoded">      
    <h1>Creation d'un nouveau mot de passe</h1>                 
